<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.banking" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/arabbank"
        android:label="@string/app_name"
        android:roundIcon="@drawable/arabbank"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".LoginActivity"/>
        <activity android:name=".Dashboard" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SSCActivity"/>
        <activity android:name=".IncomeTaxActivity"/>
        <activity android:name=".SalaryAdvancedActivity"/>
        <activity android:name=".LoanRequestActivity"/>
        <activity android:name=".VacationRequestActivity"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>
</manifest>